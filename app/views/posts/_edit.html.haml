%section.page-section
  .page-section__header
    %h1.t-h1 Edit Post
  = form_for post, url: content_path(post), :as => :content, html: { class: 'snazzy-form' } do |f|
    .snazzy-form__field
      = f.label :title
      = f.text_field :title, :required => true
    .snazzy-form__field
      = f.label :slug
      = f.text_field :slug, :required => true
    .snazzy-form__field
      = f.label :created_at
      = f.date_field :created_at, :required => true
    .snazzy-form__field
      = f.label :preview
      = f.text_area :preview
    .snazzy-form__field.snazzy-form__actions
      = button_tag 'Save', :class => 'button button--primary'
